Public Class Form1
    'Declare Integer Variables
    Dim intNum1 As Integer
    Dim intNum2 As Integer
    Dim intTotal As Integer

    'Create a Random Object
    Dim rand As New Random

    'Get a random integer and assign it to intNum
    intNum1 = rand.Next(20)
    intNum2 = rand.Next(120)

    Private Sub btnCheck_Click(sender As Object, e As EventArgs) Handles btnCheck.Click
        If intNum1 = rand.Next(120) Then
            intNum2 = intNum1 + intNum2
            lblCorrectAnswer.Text = "Correct"
        End If
    End Sub

    Private sub btnshowAnswer_click(……) handles btnshowAnswer.Click
	‘btnShowAnswer click isn't turns lblUnsolved Invisible and turn lblAnswer to Visible
	lblAnswer.Visible = True
	lblUnsolved.Visible = True
End Sub

Private sub btnClose_click(……) handles btnClose.Click
	‘ Close application when btnClose it's clicked
	Close()
End Sub

    Private Sub btnNext_Click(sender As Object, e As EventArgs) Handles btnNext.Click
        intNum1 = CStr(Random.Next(1, 20))
        intNum2 = CStr(Random.Next(20, 120))
    End Sub

End Class
