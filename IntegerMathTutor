        '= (intNum + intNum)
        txtAnswer.Text = "Correct"
    End Sub

    Private Sub btnNext_Click(sender As Object, e As EventArgs) Handles btnNext.Click
        intNum1 = CStr(Random.Next(1, 20))
        intNum2 = CStr(Random.Next(20, 120))
