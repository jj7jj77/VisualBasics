Public Class TriviaFinal
    Private Sub TriviaFinal_Activate(sender As Object, e As EventArgs) Handles MyBase.Activated
        lblCorrect2.Text = CStr(correct)
        incorrect = 10 - correct
        lblIncorrect2.Text = CStr(incorrect)
    End Sub

    Private Sub btnPlayAgain_Click(sender As Object, e As EventArgs) Handles btnPlayAgain.Click
        correct = 0
        incorrect = 0
        TriviaIntro.Show()
    End Sub

    Private Sub btnExit_Click(sender As Object, e As EventArgs) Handles btnExit.Click
        Me.Close()
    End Sub

    Private Sub btnMessage_Click(sender As Object, e As EventArgs) Handles btnMessage.Click
        If correct = 10 Then
            MsgBox("You are a King of Trivia", MsgBoxStyle.OkCancel, "Score")
        ElseIf correct = 8 Then
            MsgBox("You are the Prince of Trivia", MsgBoxStyle.OkCancel, "Score")
        ElseIf correct = 6 Then
            MsgBox("You are the Duke of Trivia", MsgBoxStyle.OkCancel, "Score")
        ElseIf correct = 4 Then
            MsgBox("You are the Earl of Trivia", MsgBoxStyle.OkCancel, "Score")
        ElseIf correct = 2 Then
            MsgBox("You are the Baron of Trivia", MsgBoxStyle.OkCancel, "Score")
        Else
            MsgBox("You are the Lord of Trivia", MsgBoxStyle.OkCancel, "Score")
        End If
    End Sub

End Class

Module ModuleTrivia
    Friend correct, incorrect As Integer
End Module
